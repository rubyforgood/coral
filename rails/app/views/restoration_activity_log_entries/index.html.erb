<h1><%= t('.title') %></h1>

<section class="row justify-content-center restoration-index">
  <% @restoration_activity_log_entries.each do |entry| %>
    <div class="col-4">
      <div class="card text-center">
        <div class="card-body restoration-index">
          <h5 class="card-title"><%= entry.table_name %></h5>
          <h6 class="card-subtitle mb-2 text-muted"><%= l(entry.created_at) %></h6>
          <p class="card-text">
            <%= t('.corals_added_message', corals_added: entry.corals_added) %>
            <%= t('.corals_stats_message', bleached_corals: entry.bleached_corals, dead_corals: entry.dead_corals) %>
          </p>
          <p class="card-text text-muted"><%= t('.cleaned_message', table_cleaned: t(entry.cleaned)) %></p>
        </div>
        <div class="card-footer restoration-index">
          <%= link_to t('defaults.actions.show'), restoration_activity_log_entry_path(entry), class: "btn btn-primary" %>
          <%= link_to t('defaults.actions.edit'), edit_restoration_activity_log_entry_path(entry), class: "btn btn-primary" %>
          <%= link_to t('defaults.actions.destroy'), restoration_activity_log_entry_path(entry), method: :delete, data: { confirm: t('defaults.actions.are_you_sure') }, class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  <% end %>
</section>

<br>

<%= link_to t('.new'), new_restoration_activity_log_entry_path %>
